<tr id="weight-<%= weight.id %>">
  
  <td><%= weight.date %></td>
  <td><%= weight.total %>lbs</td>
  <td><%= weight.pfat %>%</td>
  <td><%= weight.fat %>lbs</td>
  <td><%= weight.lean %>lbs</td>
  <% if current_user?(weight.user) %>
    <td><span class="glyphicon glyphicon-pencil"></span></td>     
    <td><%= link_to '<span class="glyphicon glyphicon-remove-circle"></span>'.html_safe, weight, method: :delete, data: { confirm: "Permanently delete?" } %></td>
  <% end %>

</tr>

