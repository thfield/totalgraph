<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      	<%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.weights.any? %>
      <h3>weights (<%= @user.weights.count %>)</h3>
      <ol class="weights">
        <%= render @weights %>
      </ol>
      <%= will_paginate @weights %>
    <% end %>
  </div>
</div>